{
    "id": "blog_post",
    "label": "Blog Post",
    "format": "page",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": {
                "type": "UID",
                "config": {
                    "label": "UID",
                    "placeholder": ""
                }
            },
            "title": {
                "type": "StructuredText",
                "config": {
                    "label": "Title",
                    "placeholder": "",
                    "allowTargetBlank": true,
                    "single": "heading1"
                }
            },
            "date": {
                "type": "Date",
                "config": {
                    "label": "Date",
                    "placeholder": ""
                }
            },
            "excerpt": {
                "type": "Text",
                "config": {
                    "label": "Excerpt",
                    "placeholder": ""
                }
            },
            "author": {
                "type": "Text",
                "config": {
                    "label": "Author",
                    "placeholder": ""
                }
            },
            "category": {
                "type": "Text",
                "config": {
                    "label": "Category",
                    "placeholder": ""
                }
            },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "rich_text": {
                            "type": "SharedSlice"
                        }
                    }
                }
            }
        },
        "SEO & Metadata": {
            "meta_title": {
                "type": "Text",
                "config": {
                    "label": "Meta Title",
                    "placeholder": ""
                }
            },
            "meta_description": {
                "type": "Text",
                "config": {
                    "label": "Meta Description",
                    "placeholder": ""
                }
            },
            "meta_image": {
                "type": "Image",
                "config": {
                    "label": "Meta Image",
                    "constraint": {
                        "width": 2400,
                        "height": 1260
                    },
                    "thumbnails": []
                }
            }
        }
    }
}